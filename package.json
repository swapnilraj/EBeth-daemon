{
  "name": "ebeth-daemon",
  "version": "0.0.0",
  "description": "Daemon to manage contract for ebeth-betting system",
  "main": "build/index.js",
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 2
  },
  "scripts": {
    "precommit": "lint-staged",
    "compile": "tsc",
    "lint": "tslint --project tsconfig.json -c tslint.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "prestart": "npm run compile && npm run lint",
    "start": "node ."
  },
  "devDependencies": {
    "@types/node": "^9.4.6",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "later": "^1.2.0"
  }
}
